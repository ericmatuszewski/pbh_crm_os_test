# ===========================================
# Database Configuration
# ===========================================
# For local development (without Docker)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/sales_crm?schema=public"

# For Docker development (uses internal network)
# DATABASE_URL="postgresql://postgres:postgres@db:5432/sales_crm?schema=public"

# Docker PostgreSQL credentials (used by docker-compose)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=sales_crm

# ===========================================
# NextAuth Configuration
# ===========================================
NEXTAUTH_URL="http://localhost:3000"
# Generate a secure secret: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-here"

# ===========================================
# OAuth Providers (optional)
# ===========================================
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""

# ===========================================
# Application Settings
# ===========================================
# Max file upload size in bytes (default 10MB)
UPLOAD_MAX_SIZE=10485760

# Application name shown in UI
NEXT_PUBLIC_APP_NAME="Sales CRM"

# Default currency for quotes
NEXT_PUBLIC_DEFAULT_CURRENCY="USD"
