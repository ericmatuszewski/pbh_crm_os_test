# ===========================================
# PBH CRM Environment Configuration
# ===========================================
# Copy this file to .env and fill in your values
# For production, ensure all secrets are strong and unique

# ===========================================
# Database Configuration
# ===========================================
# For local development (without Docker)
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/sales_crm?schema=public"

# For Docker development (uses internal network)
# DATABASE_URL="postgresql://postgres:postgres@db:5432/sales_crm?schema=public"

# Docker PostgreSQL credentials (used by docker-compose)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=sales_crm

# ===========================================
# Redis Configuration (for caching)
# ===========================================
# For local development (without Docker)
# REDIS_URL="redis://localhost:6379"

# For Docker development (uses internal network)
# REDIS_URL="redis://redis:6379"

# Leave empty to use in-memory cache (suitable for single-instance deployments)
REDIS_URL=

# ===========================================
# NextAuth Configuration
# ===========================================
NEXTAUTH_URL="http://localhost:3000"
# Generate a secure secret: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-here-change-in-production"

# ===========================================
# OAuth Providers (optional)
# ===========================================
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""

# ===========================================
# Microsoft/Outlook Integration (optional)
# ===========================================
MICROSOFT_CLIENT_ID=""
MICROSOFT_CLIENT_SECRET=""
MICROSOFT_TENANT_ID=""

# ===========================================
# Email Configuration (optional)
# ===========================================
SMTP_HOST=""
SMTP_PORT=587
SMTP_USER=""
SMTP_PASSWORD=""
SMTP_FROM=""

# ===========================================
# Storage Configuration (optional)
# ===========================================
# For S3-compatible storage (AWS S3, MinIO, DigitalOcean Spaces, etc.)
S3_ENDPOINT=""
S3_BUCKET=""
S3_ACCESS_KEY=""
S3_SECRET_KEY=""
S3_REGION="eu-west-2"

# ===========================================
# Application Settings
# ===========================================
# Max file upload size in bytes (default 10MB)
UPLOAD_MAX_SIZE=10485760

# Application name shown in UI
NEXT_PUBLIC_APP_NAME="PBH CRM"

# Default currency for quotes (GBP for UK)
NEXT_PUBLIC_DEFAULT_CURRENCY="GBP"

# Default locale
NEXT_PUBLIC_DEFAULT_LOCALE="en-GB"

# ===========================================
# Feature Flags (optional)
# ===========================================
# Enable/disable features
FEATURE_EMAIL_SYNC=true
FEATURE_DOCUMENT_STORAGE=true
FEATURE_WORKFLOW_AUTOMATION=true

# ===========================================
# Monitoring & Logging (optional)
# ===========================================
# Log level: debug, info, warn, error
LOG_LEVEL=info

# Sentry DSN for error tracking
SENTRY_DSN=""

# ===========================================
# Security Settings
# ===========================================
# Session timeout in seconds (default 24 hours)
SESSION_TIMEOUT=86400

# Rate limiting (requests per minute)
RATE_LIMIT_RPM=100

# Allowed origins for CORS (comma-separated)
CORS_ORIGINS=""
